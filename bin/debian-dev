#!/bin/bash

docker run \
    --rm \
    -it \
    --name debian-dev \
    --hostname debian-dev \
    -e DEBFULLNAME \
    -e DEBEMAIL \
    -v "$HOME/.gitconfig":"/home/user/.gitconfig":ro \
    -v "$HOME/.gnupg":"/home/user/.gnupg":ro \
    -v "$HOME/debian":"/workdir" \
    dawidd6/debian-dev \
    $@
