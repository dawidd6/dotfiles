#!/usr/bin/env python3

import json
import os
import sys

folders = []

for path in sys.argv[1:]:
    name = os.path.basename(path.rstrip("/"))
    folders.append({
        "name": name,
        "path": path
    })

output = {
    "folders": folders,
    "settings": {
        "ansible.python.interpreterPath": "/bin/python"
    }
}

print(json.dumps(output, indent=2))
